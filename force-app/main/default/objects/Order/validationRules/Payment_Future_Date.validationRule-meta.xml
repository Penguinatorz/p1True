<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Future_Date</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(Next_Payment_Date__c &gt; Today())</errorConditionFormula>
    <errorDisplayField>Next_Payment_Date__c</errorDisplayField>
    <errorMessage>Date must be set in the future.</errorMessage>
</ValidationRule>
